@model AccountEditViewModel;

<div class="container">
    <header class="mb-3">
        <h1>관리자 계정 편집</h1>
    </header>

    <form method="post">
        <section class="mb-3">
            <div class="row mb-3">
                <div class="col-md-6 mb-3 mb-md-0">
                    <label asp-for="Login" class="form-label">아이디</label>
                    <input asp-for="Login" class="form-control" disabled>
                </div>

                <div class="col-md-6">
                    <!-- alignment -->
                    <div class="form-label d-none d-md-block">&nbsp;</div>

                    <div class="form-check">
                        <input asp-for="IsEnabled" class="form-check-input">
                        <label asp-for="IsEnabled" class="form-check-label">활성화하시겠습니까?</label>
                    </div>
                </div>
            </div>

            <button name="Action" value="UpdateAccount" type="submit" class="btn btn-primary">업데이트</button>
        </section>
    </form>

    <hr>

    <form method="post">
        <section>
            <h2 class="h4">비밀번호 변경</h2>

            @if (Model.IsPasswordChangeSuccessful)
            {
                <div class="alert alert-success alert-dismissible">
                    비밀번호가 성공적으로 변경되었습니다.
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="닫기"></button>
                </div>
            }

            <div class="row mb-3">
                <div class="col-md-6">
                    <label asp-for="Password" class="form-label">비밀번호</label>
                    <input asp-for="Password" class="form-control" maxlength="50" required>
                </div>
            </div>

            <button name="Action" value="ChangePassword" type="submit" class="btn btn-secondary">비밀번호 변경</button>
        </section>
    </form>

</div>