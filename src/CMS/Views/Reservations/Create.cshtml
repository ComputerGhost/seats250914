<div class="container">
    <header class="mb-3">
        <h1>예약 생성</h1>
    </header>

    <section>
        <form method="post">
            <div class="mb-3">
                <label for="seat" class="form-label">좌석 선택</label>
                <select class="form-select" id="seat" required>
                    <option value=""></option>
                    <option value="1">아직 좌석이 확정되지 않음 (TBD)</option>
                </select>
            </div>

            <div class="mb-3">
                <label for="name" class="form-label">예약자</label>
                <input type="text" class="form-control" id="name" maxlength="50" required>
            </div>

            <div class="mb-3">
                <label for="email" class="form-label">예약자 메일</label>
                <input type="email" class="form-control" id="email" maxlength="255" required>
            </div>

            <div class="mb-3">
                <label for="phone" class="form-label">예약자 번호</label>
                <input type="tel" class="form-control" id="phone" maxlength="50" required>
            </div>

            <button type="submit" class="btn btn-primary">예약 만들기</button>
        </form>
    </section>
</div>