@using Presentation.Shared.Authentication
@{
    var username = new AuthenticationService(Context).Username;
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <title>혜린 팬미팅 2025 관리자 페이지</title>

    <link rel="icon" href="~/favicon.ico" sizes="32x32">
    <link rel="apple-touch-icon" href="~/images/apple-touch-icon.png">

    @* Fonts *@
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Noto+Sans+KR&display=swap">
    <link href="https://hangeul.pstatic.net/hangeul_static/css/nanum-square.css" rel="stylesheet">

    @* Other styles *@
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.6/dist/css/bootstrap.min.css" integrity="sha384-4Q6Gf2aSP4eDXB8Miphtr37CMZZQ5oXLH2yaXMJ2w8e2ZtHTl7GptT4jmndRuHDT" crossorigin="anonymous">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.13.1/font/bootstrap-icons.min.css">
    <link rel="stylesheet" href="~/css/two-column-layout.css" asp-append-version="true">
    @RenderSection("Styles", required: false)

    <script defer src="https://code.jquery.com/jquery-3.6.0.min.js" integrity="sha384-vtXRMe3mGCbOeY7l30aIg8H9p3GdeSe4IFlP6G8JMa7o7lXvnz3GFKzPxzJdPfGK" crossorigin="anonymous"></script>
    <script defer src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-kenU1KFdBIe4zVF0s0G1M5b4hcpxyD9F7jL+jjXkk+Q2h455rYXK/7HAuoJl+0I4" crossorigin="anonymous"></script>
    @RenderSection("Scripts", required: false)
</head>
<body class="two-column-layout">
    <div class="app-sidebar shadow-sm">
        <div class="header">
            <img src="~/images/icon.png" width="48" height="48" alt="" aria-labelledby="app-title">
            <h1 id="app-title" class="h5 ms-3 hide-on-mobile">2025년 혜린 팬미팅</h1>
        </div>

        <nav class="nav">
            <a asp-controller="Home" asp-action="Index" class="nav-link">
                <i class="icon bi bi-bar-chart-line" aria-hidden="true"></i>
                <span class="hide-on-mobile">Dashboard</span>
            </a>
            <a asp-controller="Reservations" asp-action="Index" class="nav-link">
                <i class="icon bi bi-ticket" aria-hidden="true"></i>
                <span class="hide-on-mobile">예약 관리 및 승인</span>
            </a>
            <a asp-controller="Accounts" asp-action="Index" class="nav-link">
                <i class="icon bi bi-people" aria-hidden="true"></i>
                <span class="hide-on-mobile">관리자 계정 관리</span>
            </a>
            <a asp-controller="Configuration" asp-action="Edit" class="nav-link">
                <i class="icon bi bi-gear" aria-hidden="true"></i>
                <span class="hide-on-mobile">좌석 예약 시스템 설정</span>
            </a>
        </nav>

        <div class="user-menu dropdown">
            <a href="#" class="dropdown-toggle link-body-emphasis" data-bs-toggle="dropdown" aria-expanded="false">
                <img src="~/images/lego.png" width="20" height="20" alt="" role="presentation">
                <strong class="hide-on-mobile">@username</strong>
            </a>
            <ul class="dropdown-menu">
                <li>
                    <a asp-controller="Accounts" asp-action="Edit" asp-route-login="@username" class="dropdown-item">
                        <i class="bi bi-person" aria-hidden="true"></i>
                        계정정보 수정
                    </a>
                    <form asp-action="SignOut" asp-controller="Auth" method="post">
                        <button class="dropdown-item">
                            <i class="bi bi-box-arrow-right" aria-hidden="true"></i>
                            로그아웃
                        </button>
                    </form>
                </li>
            </ul>
        </div>
    </div>

    <main class="app-main">
        @RenderBody()
    </main>
</body>
</html>