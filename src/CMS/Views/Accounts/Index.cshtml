@using Core.Application.Accounts
@model ListAccountsQueryResponse;

<div class="container">
    <header class="mb-3">
        <h1>Staff accounts</h1>
    </header>

    <table class="table table-hover">
        <thead>
            <tr>
                <th scope="col">Login</th>
                <th scope="col">Status</th>
                <td scope="col"></td>
            </tr>
            <tr>
                <th colspan="3">
                    <a asp-action="Create" class="btn btn-outline-primary w-100">Create a new account</a>
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var account in Model.Data)
            {
                <tr>
                    <td scope="row">
                        @account.Login
                    </td>
                    <td>
                        @if (account.IsEnabled)
                        {
                            <span>
                                <i class='bi bi-check-circle-fill text-success'></i> Enabled
                            </span>
                        }
                        else
                        {
                            <span>
                                <i class='bi bi-ban-fill text-danger'></i> Disabled
                            </span>
                        }
                    </td>
                    <td>
                        <a asp-action="Details" asp-route-login="@account.Login">View details</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
