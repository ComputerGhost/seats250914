@model TestDatabaseViewModel;

<div class="container">
    <h1>Test of CMS</h1>
    
    <div class="card">
        <div class="card-body">
            <h2 class="h5 card-title">Database</h2>
            <p>Database connected: <code>@Model.Success</code></p>
            @if (!Model.Success)
            {
                <p>Error: <code>@Model.Error</code></p>
            }
        </div>
    </div>
</div>