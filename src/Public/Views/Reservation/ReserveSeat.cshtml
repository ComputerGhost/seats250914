@inject IViewLocalizer Localizer;

<div class="container py-3">
    <h1>@Localizer["Seat Reservation"]</h1>

    <section>
        @Localizer["<!-- seat instructions -->"]
    </section>
    
    <form method="post">
        <section>
            <div class="mb-3">
                <label for="name" class="form-label">@Localizer["Name"]</label>
                <input type="text" id="name" class="form-control" maxlength="50" required>
            </div>
            <div class="mb-3">
                <label for="email" class="form-label">@Localizer["Email"]</label>
                <input type="email" id="email" class="form-control" maxlength="255" required>
            </div>
            <div class="mb-3">
                <label for="phone" class="form-label">@Localizer["Phone number"]</label>
                <input type="tel" id="phone" class="form-control" maxlength="15" aria-describedby="phoneHelp">
                <div id="phoneHelp" class="form-text">
                    @Localizer["Please provide a Korean phone number if possible."]
                </div>
            </div>
            <div class="mb-3">
                <label for="language" class="form-label">@Localizer["Preferred language"]</label>
                <select id="language" class="form-select" required>
                    <option value="English">English</option>
                    <option value="Korean">한국어</option>
                </select>
            </div>
        </section>

        <section>
            @Localizer["<!-- form disclosures -->"]

            <div class="form-check mb-3">
                <input class="form-check-input" type="checkbox" value="" id="agree" required>
                <label class="form-check-label" for="agree">
                    @Localizer["I accept the terms of service and privacy policy linked above."]
                </label>
            </div>
        </section>

        <section class="mb-3">
            <button type="submit" class="btn btn-secondary">@Localizer["Cancel"]</button>
            <button type="submit" class="btn btn-primary">@Localizer["Submit"]</button>
        </section>
    </form>
</div>
